{
  "compilerOptions": {
    "baseUrl": "/",
    "outDir": "./",
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "isolatedModules": false,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["@types/node"],
    "typeRoots": ["*/typing/*.d.ts", "*.d.ts"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
